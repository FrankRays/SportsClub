<UserControl x:Class="SportsClub.UI.Views.CategoriesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SportsClub.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <TreeView x:Key="treeView"/>
    </UserControl.Resources>
    <TabControl>
        <TabItem x:Name="sportsmen"
                 Header="Спортсмены"
                 Content="{StaticResource treeView}"/>
        <TabItem x:Name="trainers"
                 Header="Тренеры"
                 Content="{StaticResource treeView}"/>
        <TabItem x:Name="competitions"
                 Header="Соревнования"
                 Content="{StaticResource treeView}"/>
    </TabControl>
</UserControl>
